<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean class="org.springframework.scheduling.annotation.ScheduledAnnotationBeanPostProcessor"/>
    <bean class="quoters.bpp.InjectRandomIntAnnotationBeanPostProcessor"/>
    <!--<bean class="quoters.ContextListener"/>-->
    <context:annotation-config/>
    <bean class="quoters.bpp.BenchmarkAnnotationBeanPostProcessor"/>
    <bean id="quote" class="java.lang.String">
        <constructor-arg value="Astalavista baby"/>
    </bean>
    <bean id="talkingRobot" class="quoters.TalkingRobotImpl">
        <property name="quoters">
            <list>
                <ref bean="shakespearQuoter"/>
                <ref bean="terminatorQuoter"/>
            </list>
        </property>
    </bean>
    <bean id="shakespearQuoter" class="quoters.ShakespearQuoter">
        <property name="message" value="2 b || ! 2 b"/>
    </bean>

    <bean id="terminatorQuoter" class="quoters.TerminatorQuoter">
        <property name="messages">
            <list>
                <value>I'll be back</value>
                <ref bean="quote"/>
                <value>trust me</value>
            </list>
        </property>
    </bean>
</beans>